extends layout

block content
  .hero
    .hero-inner
      img#center(src="/images/icon.png", alt="")
      a(href=""): img#top(src="/images/home.png", alt="")
      a(href="/menu"): img#left(src="/images/menu.png", alt="")
      a(href="javascript:void(0)"): img#right(src="/images/order.png", alt="")
      span#scroll SCROLL
        br  
        i.fas.fa-arrow-down
  .wrapper
    .container#intro
      .row
        .col#intro-img
          img.img-fluid(src="/images/pizza.png", alt="") 
        .col
          h1 
            span 
              em Welcome 
            br
            strong to Junior's Pizzeria
          p.
            We are a family owned pizza shop, that has been open since 2001.
            We aim to create an experience with all of our customers, through the tale of
            our pizza. Each one of our pizza has a story behind it. 
    .container#sample
      h1 
        span 
         em We serve
        br
        strong delicious food
      p#subtitle
        em Each bite different from the last. 
      .card-deck
        .card#no-border
          img.card-img-top(src='/images/veggie-mix.jpeg', alt='...')
          .card-body
            h5.card-title 
              .row
                .col-sm
                  |Veggie Mix
                .col-sm#price
                  |$10.75
            p.card-text
              | Thin crust mixed with tomato sauce and variation of vegetables
        .card#no-border
          img.card-img-top(src='/images/steaker.jpeg', alt='...')
          .card-body
            h5.card-title 
              .row
                .col-sm
                  |Steaker
                .col-sm#price
                  |$14.65
            p.card-text 
              |steak paired with thinly cut tomato and american cheese
        .card#no-border
          img.card-img-top(src='/images/mac.jpeg', alt='...')
          .card-body
            h5.card-title
              .row
                .col-sm
                  |Mac Attack
                .col-sm#price
                  |$12.86
            p.card-text
              | The famous mac and cheese pizza
      .card-deck
        .card#no-border
          img.card-img-top(src='/images/leafer.jpeg', alt='...')
          .card-body
            h5.card-title 
              .row
                .col-sm
                  |Leafer
                .col-sm#price
                  |$13.31
            p.card-text
              | All vegan pizza with perfectly cooked tofus
        .card#no-border
          img.card-img-top(src='/images/tomato.jpeg', alt='...')
          .card-body
            h5.card-title 
              .row
                .col-sm
                  |Tomato attack
                .col-sm#price
                  |$14.65
            p.card-text 
              | Double tomato sauce with small slice of peperoni
        .card#no-border
          img.card-img-top(src='/images/ranch.jpeg', alt='...')
          .card-body
            h5.card-title
              .row
                .col-sm
                  |Ranch
                .col-sm#price
                  |$16.10
            p.card-text
              | Chicken mixed with broccoli swiss cheese and of course ranch sauce
    .container-fluid#fresh
      h1 Natural ingredients and testy food
      a(href="/menu")
        button.btn.btn-warning Menu
    .container#mix
      h1 
        span 
         em 
          |Create 
        strong your own style
        span
          em pizza
      p#subtitle.text-center
        |Mix and match any selection of topping and sides
      .row
        .col-sm
          h2#number 
            strong 01.
          .container#types
            h3 Veggie 
            p
              |We have a vast selection of meat ranging from 
              ul
                li Broccoli
                li Tomato
                li Spinach and many more
            h6
              strong $1.50 per topping
        .col-sm
          img#sides(src="/images/side1.jpeg", alt="")
      .row
        .col-sm.order-md-12
          h2#number
              strong 02.
          .container#types
            h3 Meat
            p
              |We have a vast selection of meat ranging from 
              ul
                li Chicken
                li Ham
                li Sausage and many mores
            h6
              strong $1.50 per topping 
        .col-sm.order-md-1
          img#sides(src="/images/side2.jpeg", alt="") 
      .row
        .col-sm
          h2#number
            strong 03.
          .container#types
            h3 Cheese
            p
              |We have a vast selection of meat ranging from 
              ul
                li Cheddar
                li Swish 
                li American and many mores
            h6
              strong $1.50 per topping 
        .col-sm
          img#sides(src="/images/side3.jpeg", alt="")  
    
    .container-fluid.place-order#order
      img(src="/images/side4.jpeg", alt="")
      .order-wrapper
        h1 Place Your 
          span#price Order
        form
          .row
            .col-3
              label(for="name") Name
              input#name.form-control(type='text')
            .col-6
              label(for="address") Address
              input#address.form-control(type='text')
            .col-3
              label(for='pizzaSelector') Pizza
              select#pizzaSelector.form-control
                option
                option Veggie mix &nbsp; $10.75
                option Steaker &nbsp; $14.65
                option Mac Attack &nbsp; $12.86
                option Leafer &nbsp; $13.31
                option Tomato Attack &nbsp; $ 14.65
                option Ranch &nbsp; $16.10
                option Black Olive Pep &nbsp; $11.12 
                option Cheese Pizza &nbsp; $7.27
                option The Ham Special &nbsp; $15.10
          a(href="javascript:void(0)")
            span.btn Submit Order

